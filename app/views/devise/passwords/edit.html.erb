<div class="container">
  <div class="compact_form">

    <h2><%= t("devise.views.passwords.edit.heading") %></h2>
    <hr>

    <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <%= f.error_notification %>

      <%= f.input :reset_password_token, as: :hidden %>
      <%= f.full_error :reset_password_token %>

      <div class="form-inputs">
        <%= f.input :password,
          label: t("devise.views.passwords.edit.new_pw"),
          required: true,
          autofocus: true,
          hint: ("#{@minimum_password_length} #{t("devise.views.passwords.edit.char_min")}" if @minimum_password_length),
          input_html: { autocomplete: "new-password" } %>
        <%= f.input :password_confirmation,
          label: t("devise.views.passwords.edit.confirm_pw"),
          required: true,
          input_html: { autocomplete: "new-password" } %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, t("devise.views.passwords.edit.change"), class: "btn btn-lg btn-outline-primary" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>

  </div>
</div>
