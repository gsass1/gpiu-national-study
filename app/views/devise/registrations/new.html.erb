<div class="container">
  <div class="compact_form">

    <h1><%= t("devise.views.registrations.new.heading") %></h1>

    <p><%= t("devise.views.registrations.new.greeting") %></p>

    <hr>

    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), wrapper: :horizontal_form) do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs">
        <%= f.input :first_name,
          required: true,
          autofocus: true,
          input_html: { autocomplete: "first-name" }%>

        <%= f.input :last_name,
          required: true,
          autofocus: true,
          input_html: { autocomplete: "last-name" }%>

        <%= f.input :title,
          required: true,
          autofocus: true,
          collection: User::TITLES %>

        <%= f.input :suffix,
          required: false %>

        <%= f.input :email,
          required: true,
          autofocus: true,
          input_html: { autocomplete: "email" }%>

        <%= f.input :country_id,
          collection: Country.all,
          label_method: :name,
          value_method: :id,
          required: true,
          autofocus: true,
          input_html: { autocomplete: "email" }%>

        <%= f.input :password,
          required: true,
          hint: ("#{@minimum_password_length} #{t("devise.views.registrations.new.char_min")}" if @minimum_password_length),
          input_html: { autocomplete: "new-password" } %>
        <%= f.input :password_confirmation,
          required: true,
          input_html: { autocomplete: "new-password" } %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, t("devise.views.registrations.new.sign_up"), class: 'btn btn-lg btn-outline-primary float-right' %>
      </div>
    <% end %>

    <div class="clearfix"></div>

    <hr>

    <%= render "devise/shared/links" %>
  </div>
</div>
