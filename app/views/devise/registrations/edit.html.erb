<div class="container">
  <div class="compact_form">

    <%= render "shared/back_button" %>

    <h2><%= t("devise.views.registrations.edit.heading") %></h2>

    <hr>

    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }, wrapper: :horizontal_form) do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs">
        <%= f.input :first_name,
          required: true,
          autofocus: true,
          input_html: { autocomplete: "first-name" }%>

        <%= f.input :last_name,
          required: true,
          autofocus: true,
          input_html: { autocomplete: "last-name" }%>

        <%= f.input :title,
          required: true,
          autofocus: true,
          collection: User::TITLES %>

        <%= f.input :suffix,
          required: false %>

        <%= f.input :email, required: true, autofocus: true %>

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <p><%= t("devise.views.registrations.edit.waiting_for") %> <%= resource.unconfirmed_email %></p>
        <% end %>

        <%= f.input :password,
          hint: t("devise.views.registrations.edit.blank"),
          required: false,
          input_html: { autocomplete: "new-password" } %>
        <%= f.input :password_confirmation,
          required: false,
          input_html: { autocomplete: "new-password" } %>
        <%= f.input :current_password,
          hint: t("devise.views.registrations.edit.current_pass_needed"),
          required: true,
          input_html: { autocomplete: "current-password" } %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Update", class: "btn btn-lg btn-outline-primary float-right" %>
      </div>
    <% end %>

    <div class="clearfix"></div>

    <h2 class="mt-3"><%= t("devise.views.registrations.edit.delete") %></h2>
    <hr>

    <p><%= t("devise.views.registrations.edit.delete_note") %></p>

    <%= link_to t("devise.views.registrations.edit.delete"), registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "btn btn-lg btn-danger" %>
  </div>
</div>
